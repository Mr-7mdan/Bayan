# Application config (see backend/app/config.py)
APP_ENV=prod
CORS_ORIGINS=https://app.example.com,https://admin.example.com
SECRET_KEY=change-me
# Local analytical store (DuckDB) and metadata store
DUCKDB_PATH=/var/lib/reporting/local.duckdb
METADATA_DB_PATH=/var/lib/reporting/meta.sqlite
# Date/time defaults for date preset resolution (alerts, scheduled queries)
# WEEK_START_DAY=SUN   # First day of the week: SUN, MON, TUE, WED, THU, FRI, SAT
# WEEKENDS=SAT_SUN     # Weekend days: SAT_SUN or FRI_SAT
# Timezone for the alert/sync scheduler and time-trigger matching.
# Must be a valid IANA timezone name (e.g. Asia/Riyadh, Africa/Cairo, Europe/London).
# Defaults to UTC.  Set this to match the users' local timezone so that
# a trigger set to "07:00" fires at 07:00 in the configured timezone.
# SCHEDULER_TIMEZONE=UTC

# Frontend/Backend URLs used by snapshot service
FRONTEND_BASE_URL=https://app.example.com
BACKEND_BASE_URL=https://api.example.com/api
SNAPSHOT_ACTOR_ID=dev_user
# Playwright browser path (required on Windows when running as SYSTEM service)
# Set to a shared directory, then run: playwright install chromium
# PLAYWRIGHT_BROWSERS_PATH=C:\Bayan\playwright-browsers
# Optional external DSNs (uncomment and set)
# POSTGRES_DSN=postgresql+psycopg://user:pass@host:5432/db
# SUPABASE_POSTGRES_DSN=postgresql+psycopg://user:pass@host:5432/db

# Waitress server settings consumed by run_prod_waitress.sh
RUN_SCHEDULER=1
HOST=127.0.0.1
PORT=8000
THREADS=8
CONN_LIMIT=1024
BACKLOG=2048
CHANNEL_TIMEOUT=120
IDENT=reporting-api
AI_CONCURRENCY=2
AI_TIMEOUT_SECONDS=30
